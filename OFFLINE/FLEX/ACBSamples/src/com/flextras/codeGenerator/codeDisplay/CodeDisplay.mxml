<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var generatedCode : String = '';
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				System.setClipboard(this.codeArea.text);
			}
			
		]]>
	</mx:Script>

	<mx:Button label="Copy Code to Clipboard" click="button1_clickHandler(event)" /> 
	<mx:TextArea editable="false" id="codeArea" selectable="true" width="100%" height="100%" text="{generatedCode}" />
	
</mx:VBox>
