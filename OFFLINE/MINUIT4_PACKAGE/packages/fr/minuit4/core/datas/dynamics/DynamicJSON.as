/*** Written by :* @author Floz* www.floz.fr || www.minuit4.fr*/package fr.minuit4.core.datas.dynamics{	import com.adobe.serialization.json.JSON;	public class DynamicJSON extends DynamicDatas	{			// - PRIVATE VARIABLES -----------------------------------------------------------				private var _datas:Object;				// - PUBLIC VARIABLES ------------------------------------------------------------				// - CONSTRUCTOR -----------------------------------------------------------------				public function DynamicJSON( datas:String )		{			this._datas = JSON.decode( datas );			parseDatas();		}				// - EVENTS HANDLERS -------------------------------------------------------------				// - PRIVATE METHODS -------------------------------------------------------------				override protected function parseDatas():void		{			for ( var propName:String in _datas )				_properties[ propName ] = _datas[ propName ];		}				// - PUBLIC METHODS --------------------------------------------------------------				/**		 * @inheritDoc		 */		override public function getFiles( propertyName:String ):Array		{			if( !propertyName in _properties )				return null;						var files:Array = _properties[ propertyName ];			var n:int = files.length;				if( n == 0 ) return null;									for( var i:int; i<n; ++i )				files[ i ].url = resolveString( files[ i ].url );							return files;		}				// - GETTERS & SETTERS -----------------------------------------------------------		}	}