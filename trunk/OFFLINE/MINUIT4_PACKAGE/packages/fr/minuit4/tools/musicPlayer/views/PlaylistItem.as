/*** Written by :* @author Floz* www.floz.fr || www.minuit4.fr*/package fr.minuit4.tools.musicPlayer.views{	import flash.text.TextFieldAutoSize;	import fr.minuit4.tools.musicPlayer.core.views.playlist.APlaylistItem;	import fr.minuit4.tools.musicPlayer.manager.VisualManager;	import flash.display.Graphics;	import flash.display.Shape;	import flash.text.TextField;	import flash.text.TextFormat;	public class PlaylistItem extends APlaylistItem	{			// - PRIVATE VARIABLES -----------------------------------------------------------				private var _visualManager:VisualManager;				// - PUBLIC VARIABLES ------------------------------------------------------------				// - CONSTRUCTOR -----------------------------------------------------------------				public function PlaylistItem()		{			_visualManager = VisualManager.getInstance();						drawBackground();			defineTexts();		}				// - EVENTS HANDLERS -------------------------------------------------------------				// - PRIVATE METHODS -------------------------------------------------------------				private function drawBackground():void		{			var bg:Shape = new Shape();			var g:Graphics = bg.graphics;			g.beginFill( 0xbbbbbb );			g.drawRect( 0, 0, _visualManager.getPlayerWidth() - 10, 15 );			g.endFill();			addChild( bg );		}				private function defineTexts():void		{			var tField:TextField = new TextField();			tField.defaultTextFormat = new TextFormat( "_sans", 9, 0x000000 );			tField.autoSize = TextFieldAutoSize.LEFT;			titleField = tField;		}				// - PUBLIC METHODS --------------------------------------------------------------				// - GETTERS & SETTERS -----------------------------------------------------------		}	}