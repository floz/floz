/*** Written by :* @author Floz* www.floz.fr || www.minuit4.fr*/package fr.minuit4.core.datas.dynamics{	import fr.minuit4.core.datas.File;	public class DynamicXML extends DynamicDatas	{			// - PRIVATE VARIABLES -----------------------------------------------------------				private var _datas:XML;				// - PUBLIC VARIABLES ------------------------------------------------------------				// - CONSTRUCTOR -----------------------------------------------------------------				public function DynamicXML( datas:XML )		{			this._datas = datas;						parseDatas();		}				// - EVENTS HANDLERS -------------------------------------------------------------				// - PRIVATE METHODS -------------------------------------------------------------				override protected function parseDatas():void		{			var list:XMLList = _datas.children();			for each( var propNode:XML in list )				_properties[ propNode.name() ] = propNode;		}				// - PUBLIC METHODS --------------------------------------------------------------				override public function getFiles( propertyName:String ):Array		{			var list:XMLList = _datas.children().( localName() == propertyName ).descendants().( localName() == "file" );			var n:int = list.length();			if( n == 0 ) return null;						var file:File;			var files:/*File*/Array = [];			for( var i:int; i<n; ++i )			{				file = new File();				file.id = list[ i ].@id;				file.url = resolveString( list[ i ] );				files[ i ] = file;			}			return files;		}				// - GETTERS & SETTERS -----------------------------------------------------------		}	}