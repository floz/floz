/*** Written by :* @author Floz* www.floz.fr || www.minuit4.fr*/package fr.minuit4.core.datas.dynamics{	public class DynamicXML extends DynamicDatas	{			// - PRIVATE VARIABLES -----------------------------------------------------------				private var _datas:XML;				// - PUBLIC VARIABLES ------------------------------------------------------------				// - CONSTRUCTOR -----------------------------------------------------------------				public function DynamicXML( datas:XML )		{			this._datas = datas;						parseDatas();		}				// - EVENTS HANDLERS -------------------------------------------------------------				// - PRIVATE METHODS -------------------------------------------------------------				override protected function parseDatas():void		{			var list:XMLList = _datas.children();			for each( var propNode:XML in list )				_properties[ propNode.name() ] = propNode;		}				// - PUBLIC METHODS --------------------------------------------------------------				/**		 * @inheritDoc		 */		override public function getFiles( propertyName:String ):Array		{			var list:XMLList = _datas.children().( localName() == propertyName ).descendants().( localName() == "file" );			var n:int = list.length();			if( n == 0 ) return null;						var files:Array = [];			for( var i:int; i<n; ++i )				files[ i ] = { id: list[ i ].@id, url: resolveString( list[ i ] ) };						return files;		}				// - GETTERS & SETTERS -----------------------------------------------------------		}	}